generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  CHILD
  PARENT
  TEACHER
  ADMIN
}

model Profile {
  id        String   @id @default(uuid()) @db.Uuid
  email     String   @unique @db.Text
  fullName  String   @db.Text
  password  String   @db.Text
  role      Role     @default(CHILD)
  createdAt DateTime @default(now()) @db.Timestamptz

  images       Image[]        @relation("profile_images")
  audioFiles   AudioFile[]    @relation("profile_audioFiles")
  userProgress UserProgress[] @relation("profile_progress")

  parents ParentChild[] @relation("child_parents")
  children ParentChild[] @relation("parent_children")

  // New relations for teacher-student assignments
  teacherAssignments TeacherAudioAssignment[] @relation("teacher_assignments")
  studentAssignments TeacherAudioAssignment[] @relation("student_assignments")

  @@map("profiles")
}

model Image {
  id          String   @id @default(uuid()) @db.Uuid
  title       String   @db.Text
  description String?  @db.Text
  imageUrl    String   @db.Text
  createdAt   DateTime @default(now()) @db.Timestamptz
  createdBy   String?  @db.Uuid

  createdByProfile Profile?             @relation("profile_images", fields: [createdBy], references: [id], onDelete: Cascade)
  audioRelations   AudioImageRelation[]

  @@map("images")
}

model AudioFile {
  id            String        @id @default(uuid()) @db.Uuid
  title         String        @db.Text
  description   String?       @db.Text
  audioUrl      String        @db.Text
  duration      Int?
  createdAt     DateTime      @default(now()) @db.Timestamptz
  createdBy     String?       @db.Uuid

  createdByProfile Profile?        @relation("profile_audioFiles", fields: [createdBy], references: [id], onDelete: Cascade)
  audioRelations   AudioImageRelation[]
  userProgresses   UserProgress[]
  teacherAssignments TeacherAudioAssignment[] @relation("teacher_assignments")

  @@map("audio_files")
}

model AudioImageRelation {
  id        String   @id @default(uuid()) @db.Uuid
  audioId   String   @db.Uuid
  imageId   String   @db.Uuid
  createdAt DateTime @default(now()) @db.Timestamptz

  audio AudioFile @relation(fields: [audioId], references: [id], onDelete: Cascade)
  image Image     @relation(fields: [imageId], references: [id], onDelete: Cascade)

  @@unique([audioId, imageId])
  @@map("audio_image_relations")
}

model UserProgress {
  id           String    @id @default(uuid()) @db.Uuid
  userId       String    @db.Uuid
  audioId      String    @db.Uuid
  openedAt     DateTime? @db.Timestamptz
  downloadedAt DateTime? @db.Timestamptz
  createdAt    DateTime  @default(now()) @db.Timestamptz

  user  Profile   @relation("profile_progress", fields: [userId], references: [id], onDelete: Cascade)
  audio AudioFile @relation(fields: [audioId], references: [id], onDelete: Cascade)

  @@unique([userId, audioId])
  @@map("user_progress")
}

model ParentChild {
  id        String   @id @default(uuid()) @db.Uuid
  parentId  String   @db.Uuid
  childId   String   @db.Uuid
  createdAt DateTime @default(now()) @db.Timestamptz

  parent Profile @relation("parent_children", fields: [parentId], references: [id], onDelete: Cascade)
  child  Profile @relation("child_parents", fields: [childId], references: [id], onDelete: Cascade)

  @@unique([parentId, childId])
  @@map("parent_child")
}

model TeacherAudioAssignment {
  id        String   @id @default(uuid()) @db.Uuid
  teacherId String   @db.Uuid
  audioId   String   @db.Uuid
  studentId String   @db.Uuid
  createdAt DateTime @default(now()) @db.Timestamptz

  teacher Profile @relation("teacher_assignments", fields: [teacherId], references: [id], onDelete: Cascade)
  audio   AudioFile @relation("teacher_assignments", fields: [audioId], references: [id], onDelete: Cascade)
  student Profile @relation("student_assignments", fields: [studentId], references: [id], onDelete: Cascade)

  @@unique([teacherId, audioId, studentId])
  @@map("teacher_audio_assignments")
}
